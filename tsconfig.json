{
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "suppressImplicitAnyIndexErrors": true,
      "removeComments": true,
      "sourceMap": false,
      "target": "ES5",
      "lib": [ "es2015", "dom" ]
    },
    "exclude": [
      "node_modules",
      "typings/main",
      "typings/main.d.ts"
  ],
  "angularCompilerOptions": { "genDir": "aot/", "skipMetadataEmit": true }
}